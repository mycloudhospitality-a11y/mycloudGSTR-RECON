{
  "app_meta": {
    "app_name": "mycloud GSTR-1 vs GST Export Reconciliation",
    "version": "1.0",
    "scope": "Multi-hotel | Multi-month | File-driven"
  },

  "reconciliation_components": [
    {
      "key": "total_taxable_value",
      "label": "Total Taxable Value",
      "excel_source": "HSN.taxable_value",
      "pdf_source": "HSN.taxable_value",
      "match_type": "exact",
      "logic": "Aggregated HSN taxable value"
    },
    {
      "key": "b2b_taxable_value",
      "label": "B2B Taxable Value",
      "excel_source": "B2B.taxable_value",
      "pdf_source": "Registered_Invoices.taxable_value",
      "match_type": "exact",
      "logic": "Total of registered (B2B) invoices"
    },
    {
      "key": "cgst_amount",
      "label": "CGST Amount",
      "excel_source": "CGST.amount",
      "pdf_source": "CGST.amount",
      "match_type": "exact",
      "logic": "Total Central GST liability"
    },
    {
      "key": "sgst_amount",
      "label": "SGST Amount",
      "excel_source": "SGST.amount",
      "pdf_source": "SGST.amount",
      "match_type": "exact",
      "logic": "Total State GST liability"
    },
    {
      "key": "igst_amount",
      "label": "IGST Amount",
      "excel_source": "IGST.amount",
      "pdf_source": "IGST.amount",
      "match_type": "exact",
      "logic": "Total Integrated GST liability"
    },
    {
      "key": "total_cess",
      "label": "Total Cess",
      "excel_source": "CESS.amount",
      "pdf_source": "CESS.amount",
      "match_type": "exact",
      "logic": "Total luxury / additional cess"
    },
    {
      "key": "total_invoice_value",
      "label": "Total Invoice Value",
      "excel_source": "Invoice.total_value",
      "pdf_source": "Invoice.total_value",
      "match_type": "exact",
      "logic": "Gross invoice value including taxes"
    },
    {
      "key": "exempted_non_gst",
      "label": "Exempted / Non-GST",
      "excel_source": "Exempt.non_gst_value",
      "pdf_source": "Non_Taxable.supplies",
      "match_type": "difference_allowed",
      "logic": "Non-taxable / exempt supplies"
    },
    {
      "key": "advances_adjusted",
      "label": "Advances Adjusted",
      "excel_source": "Advances.adjusted",
      "pdf_source": "Advance.adjustments",
      "match_type": "difference_allowed",
      "logic": "Advance receipts adjusted against invoices"
    }
  ],

  "output_table": {
    "columns": [
      "Component",
      "GSTR-1 Excel Value (₹)",
      "PDF Export Value (₹)",
      "Formula / Logic Used",
      "Status",
      "Discrepancy (₹)"
    ]
  },

  "status_rules": {
    "exact": "Matched if Excel value equals PDF value",
    "difference_allowed": "Difference allowed but highlighted"
  },

  "explanation_templates": {
    "matched": "Values are fully reconciled. No action required.",
    "difference_allowed": "Difference observed due to timing or disclosure differences. No GST impact."
  },

  "audit_note": "Reconciliation is generated dynamically based on uploaded files. No data is reused across hotels or periods."
}
